<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sgbapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SGBApp">
        <activity android:name="com.example.standardbankapp.views.signActivities.FingerPrint"
            android:label="Using Fingerprint"/>
        <activity android:name="com.example.standardbankapp.views.signActivities.VoiceRecog"
            android:label="Voice Recognition"/>
        <activity android:name="com.example.standardbankapp.views.signActivities.PinActivity"
            android:label="With A 4-Digit PIN"/>
        <activity android:name="com.example.standardbankapp.views.signActivities.FaceRecog"
            android:label="Face Recognition"/>
        <activity
            android:name="com.example.standardbankapp.views.MainActivity"
            android:label="Choose How to Sign In" />
        <activity
            android:name="com.example.standardbankapp.views.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.example.standardbankapp.views.SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>